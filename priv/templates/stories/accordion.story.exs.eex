        ]
      },
      %Variation{
        id: :separated,
        description: "Separated variant",
        attributes: %{variant: "separated"},
        slots: [
          """
          <.accordion_item title="Item One">
            Content for item one.
          </.accordion_item>
          <.accordion_item title="Item Two">
            Content for item two.
          </.accordion_item>
          <.accordion_item title="Item Three">
